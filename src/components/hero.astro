---
import LinkButton from "@/components/link-button.astro";
import { VideoPlayer } from "@/components/video-player";
---

<section
  id="hero"
  class="grid gap-16 overflow-clip px-5 py-16 lg:grid-cols-2 lg:px-8"
>
  <div class="space-y-7">
    <h1>
      Real Estate Investment in Germany – <span class="text-accent-300"
        >Even Without Kapital</span
      >
    </h1>
    <p>
      We specialize in helping international professionals working in Germany
      invest in property with structured financing solutions — even if you
      currently have limited equity.
    </p>
    <div class="flex flex-col gap-2 lg:flex-row">
      <LinkButton href="/#">Schedule a Free Consultation</LinkButton>
      <LinkButton href="/#" variant="outline">
        Discover Your Investment Options
      </LinkButton>
    </div>
    <div class="bg-primary-900 h-0.5 w-full"></div>
    <div class="-mt-3 flex gap-6 lg:gap-12">
      <div>
        <p class="text-accent-300 text-2xl lg:text-3xl">2.500+</p>
        <p class="text-sm text-neutral-100">Happy Investors</p>
      </div>
      <div>
        <p class="text-accent-300 text-2xl lg:text-3xl">€250M+</p>
        <p class="text-sm text-neutral-100">Properties Sold</p>
      </div>
      <div>
        <p class="text-accent-300 text-2xl lg:text-3xl">15%</p>
        <p class="text-sm text-neutral-100">Avg. Annual ROI</p>
      </div>
    </div>
  </div>

  <div class="border-accent-300 h-fit rounded-3xl border p-3">
    <VideoPlayer
      client:load
      src="/videos/pintiproperti-video.mp4"
      slot="videoPlayer"
    />
  </div>
</section>
